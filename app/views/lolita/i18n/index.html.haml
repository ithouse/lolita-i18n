- content_for :style do
  = stylesheet_link_tag "lolita/i18n/application.css", :media => "screen,projection"
- content_for :script do
  = javascript_include_tag "lolita/i18n/application", "lolita/i18n/spin.min"
.box.i18n-bo
  .boxtitle
    %h1.black= ::I18n.t('lolita-i18n.title', :default => "Static content translation")
    .arrow
  .list
    %table
      %thead
        %tr
          %th{:style => "width:450px"}
            = label_tag :active_locale, I18n.t(@active_locale, :default => @active_locale)
            - if locale_options.size > 1
              = select_tag :active_locale, options_for_select(locale_options), :id => "active_locale"
          %th{:style => "width:90%"}= ::I18n.t(::I18n.default_locale)
      %tbody
        - @translation_keys.each do |key|
          %tr
            %td{:style => "width:450px", :'data-key' => Lolita::I18n::Backend.translation_key(key), :'data-locale' => @active_locale}
              %p= ::I18n.t(Lolita::I18n::Backend.translation_key(key), :locale => @active_locale, :default => "")
            %td{:style => "width:90%", :'data-key' => Lolita::I18n::Backend.translation_key(key), :'data-locale' => ::I18n.default_locale}
              %p= ::I18n.t(Lolita::I18n::Backend.translation_key(key), :locale => ::I18n.default_locale, :default => "")
              %span.hint
                = Lolita::I18n::Backend.translation_key(key)